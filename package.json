{
  "name": "bridgemq",
  "version": "1.0.0",
  "description": "Distributed task queue system with mesh architecture for Node.js",
  "main": "src/index.js",
  "scripts": {
    "start": "node examples/basic/producer.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "queue",
    "task-queue",
    "distributed",
    "redis",
    "mesh",
    "workflow",
    "job-queue",
    "background-jobs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bridgemq.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bridgemq/issues"
  },
  "homepage": "https://github.com/yourusername/bridgemq#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "ioredis": "^5.3.2",
    "uuid": "^9.0.1",
    "cron-parser": "^4.9.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jsdoc": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
